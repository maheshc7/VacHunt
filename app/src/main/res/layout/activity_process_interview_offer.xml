<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".view.hunt.process.ProcessInterviewOffer">

    <ImageView
        android:id="@+id/Home_Line"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home_line" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="408dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/Shortlisting"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_nohighlight"
            android:text="Shortlisting"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="14sp" />

        <Button
            android:id="@+id/Interview"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_bottom_highlight"
            android:text="Interview"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="14sp" />

        <Button
            android:id="@+id/Documentation"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_nohighlight"
            android:text="Documentation"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="14sp" />

        <Button
            android:id="@+id/Deployment"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_nohighlight"
            android:text="Deployment"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/OfferLetter"
        android:layout_width="194dp"
        android:layout_height="31dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/right_small_stroke"
        android:text="Offer Letter"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Employmentcontract"
        android:layout_width="194dp"
        android:layout_height="31dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/right_small_stroke"
        android:text="Employment Contract"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OfferLetter" />

    <TextView
        android:id="@+id/Others1"
        android:layout_width="66dp"
        android:layout_height="31dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Others"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Employmentcontract" />

    <TextView
        android:id="@+id/Othersbox"
        android:layout_width="229dp"
        android:layout_height="28dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/schedule_textbox"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/Others1"
        app:layout_constraintTop_toTopOf="@+id/Others1" />

    <TextView
        android:id="@+id/rdfv"
        android:layout_width="336dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Required Documents For Verification"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Othersbox" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="289dp"
        android:layout_height="160dp"
        android:layout_marginStart="48dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rdfv">

        <LinearLayout
            android:id="@+id/Education"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/educert"
                android:layout_width="230dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="7dp"
                android:text="Education Certificate"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/educheck"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Experience"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/expcert"
                android:layout_width="230dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="7dp"
                android:text="Experience Certificate"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/expcheck"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Medical"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/medcert"
                android:layout_width="230dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="7dp"
                android:text="Medical Certificate"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/medcheck2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Passport"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pass"
                android:layout_width="230dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="7dp"
                android:text="Passport"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/passcheck"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/others2"
        android:layout_width="64dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Others"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/othersbox2"
        android:layout_width="229dp"
        android:layout_height="28dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/schedule_textbox"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/others2"
        app:layout_constraintTop_toTopOf="@+id/others2" />

    <Button
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/schedule_confirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/othersbox2" />

    <Button
        android:id="@+id/attach1"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="20dp"
        android:layout_height="23dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/offer_attach_1"
        app:layout_constraintStart_toEndOf="@+id/OfferLetter"
        app:layout_constraintTop_toTopOf="@+id/OfferLetter" />

    <Button
        android:id="@+id/attach2"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="20dp"
        android:layout_height="23dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/offer_attach_1"
        app:layout_constraintStart_toEndOf="@+id/Employmentcontract"
        app:layout_constraintTop_toTopOf="@+id/Employmentcontract" />

    <Button
        android:id="@+id/attach3"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="20dp"
        android:layout_height="23dp"
        android:background="@drawable/offer_attach_1"
        app:layout_constraintStart_toEndOf="@+id/Othersbox"
        app:layout_constraintTop_toTopOf="@+id/Othersbox" />

    <Button
        android:id="@+id/attach4"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="20dp"
        android:layout_height="23dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/offer_attach_1"
        app:layout_constraintStart_toEndOf="@+id/othersbox2"
        app:layout_constraintTop_toTopOf="@+id/othersbox2" />

</android.support.constraint.ConstraintLayout>